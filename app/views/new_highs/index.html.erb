<div class="container">
  <div class="row">
    <div class="col-md-12">
      <section>
        <div class="center well block-powder">
          <h1>Search New Highs</h1>
        </div>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= button_to 'Weekly', new_highs_path, :method => :get, params: { query: :weekly }, remote: true, class: 'btn btn-primary' %>
    </div>
    <div class="col-md-4">
      <%= button_to 'Bi-Weekly', new_highs_path, :method => :get, params: { query: :bi_weekly }, remote: true, class: 'btn btn-primary' %>
    </div>
    <div class="col-md-4">
      <%= button_to 'Monthly', new_highs_path, :method => :get, params: { query: :monthly }, remote: true, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div id="new_highs">

      </div>
    </div>
  </div>
</div>
