<div class="container">
  <div class="row">
    <div class="col-md-12">
      <section>
        <div class="center well block-powder">
          <h1>Search Earnings</h1>
        </div>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <section class='well block-cream'>
        Usage: Enter surprise threshold, i.e. 25 for stocks with a surprise > 25%
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <section id="search_earnings">
        <%= form_for zacks_path, method: :get, remote: true do %>
          <p>
            Earnings Surprise:
            <%= text_field_tag :query, params[:query] %>
            <%= submit_tag 'Search', name: nil %>
          </p>
        <% end %>
      </section>
      <div id="zacks-earnings">

      </div>
    </div>
  </div>
</div>
